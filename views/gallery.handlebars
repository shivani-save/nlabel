<div class="gallery-view">

  <canvas class="main-view card" id="artboard" width="{{canvas.width}}" height="{{canvas.height}}">
    
  </canvas>

  <div class="side-view card">

    <form action="#" method="POST">
      <!-- Class selection -->
      <div class="form-row">
        <div class="col">
        <input class="form-control" list="class-list" name="class" value="{{#if currClass.classname}}{{currClass.classname}}{{/if}}">
        <datalist id="class-list">
          <!-- list of class names -->
          {{#each classList}}
          <option value="{{this}}">
          {{/each}}
          <!-- list of class names END -->
        </datalist>
        </div>
        <div class="col">
          <button class="btn btn-primary mb-2" type="button">Set</button>
        </div>
      </div>
      <!-- Class selection END -->
      <!-- list of labels for selected class-->
      {{#with currClass}}
      {{#each labels}}
      <div class="input-group input-group-sm mb-1">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-sm">{{this.name}}</span>
        </div>
        <input type="text" class="form-control" aria-describedby="inputGroup-sizing-sm" list="value-list-{{name}}" placeholder="value">
        <datalist name="value-list" id="value-list-{{name}}">
          <!-- list of values for unique id-->
          {{#each this.values}}
          <option value="{{this}}"></option>
          {{/each}}
          <!-- list of values END -->
        </datalist>
      </div>
      {{/each}}
      {{/with}}
    <!-- list of labels END -->
      <button class="btn btn-outline-primary btn-sm mb-1" type="button">+ Label</button>
      <button class="btn btn-block btn-primary btn-sm mb-1 " type="submit">Save this object</button>
    </form>
    
  </div>

</div>


